from fastapi import FastAPI
from app.routers import (
    telnyx_webhooks,
    texml,
    retell,
    auto_retell,
    client_onboarding
)
from app.routers import telnyx as telnyx_router
from app.routers import bulk as bulk_router

from fastapi.staticfiles import StaticFiles
from fastapi.middleware.cors import CORSMiddleware
from app.config import settings
from app.api.v1 import api_router
from app.database import Base, engine


# Import models so they're registered with SQLAlchemy
from app.models import User, PhoneNumber, Call, Recording, AIAgent, ClientMapping

# Create database tables automatically
Base.metadata.create_all(bind=engine)

# Initialize app
app = FastAPI(
    title=settings.APP_NAME,
    debug=settings.DEBUG,
    version="1.0.0"
)

# Include all routers
app.include_router(telnyx_webhooks.router)
app.include_router(texml.router)
app.include_router(retell.router)
app.include_router(auto_retell.router)
app.include_router(client_onboarding.router)
app.include_router(telnyx_router.router)
app.include_router(bulk_router.router)


@app.get("/_routes")
def _routes():
    return sorted([getattr(r, "path", str(r)) for r in app.router.routes])

# CORS Middleware
app.add_middleware(
    CORSMiddleware,
    allow_origins=settings.ALLOWED_ORIGINS,
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# Include API routes

# Root route
app.mount("/audio", StaticFiles(directory="static/audio"), name="audio")

@app.get("/")
async def root():
    return {
        "message": "VoIP Platform API",
        "version": "1.0.0",
        "status": "running"
    }

# Health Check
@app.get("/health")
async def health_check():
    return {
        "status": "healthy",
        "app_name": settings.APP_NAME,
        "debug": settings.DEBUG,
        "api_prefix": settings.API_V1_PREFIX,
        "configured_services": {
            "telnyx": bool(settings.TELNYX_API_KEY),
            "openai": bool(settings.OPENAI_API_KEY),
            "stripe": bool(settings.STRIPE_SECRET_KEY),
            "aws": bool(settings.AWS_ACCESS_KEY_ID),
            "google_cloud": bool(settings.GOOGLE_CLOUD_PROJECT),
        }
    }

